<?xml version="1.0" encoding="utf-8"?>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Candidate Photo -->
                <ImageView
                    android:id="@+id/candidatePhotoImageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/kkkk" />

                <!-- Candidate Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:orientation="vertical">

                    <!-- Candidate Name -->
                    <TextView
                        android:id="@+id/candidateNameTextView"
                        android:layout_width="156dp"
                        android:layout_height="40dp"
                        android:text="Name"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/candidateTitleTextView"
                        android:layout_width="156dp"
                        android:layout_height="40dp"
                        android:text="Title"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="200dp"
                        android:id="@+id/postMainActivity"
                        android:layout_height="wrap_content"
                        android:text="ðŸ˜ðŸ˜ðŸ˜Today I wrote a Blog on Google ðŸ’»ðŸ’»ðŸ’»ðŸ’» "
                        android:textSize="18sp"
                        android:textColor="@color/black"/>

                </LinearLayout>

            </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
